		"motion": "^12.0.3",
		"next-themes": "^0.4.4",
		"react": "^19.0.0",
		"react-colorful": "^5.6.1",
		"react-dom": "^19.0.0",
		"react-ga4": "^2.1.0",
		"react-redux": "^9.2.0",
		"vite-plugin-pwa": "^0.21.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.28.0",
		"@types/node": "^22.10.5",
		"@types/react": "^19.0.4",
		"@types/react-dom": "^19.0.2",
		"@vitejs/plugin-react": "^4.3.4",
		"autoprefixer": "^10.4.20",
