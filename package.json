{
	"name": "marquee",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --host",
		"build": "tsc && vite build",
		"deploy": "powershell -c \"$f=New-TemporaryFile; iwr https://host.retiehe.com/cli -OutFile $f; node $f --site marquee.shangzhenyang.com --build build --outdir dist; rm $f -Force\"",
		"format": "prettier --write .",
		"lint": "eslint \"src/**/*.ts\" \"src/**/*.tsx\" && prettier --check .",
		"preview": "vite preview --host"
	},
	"dependencies": {
		"@nextui-org/react": "^2.6.11",
		"@reduxjs/toolkit": "^2.5.0",
		"clsx": "^2.1.1",
